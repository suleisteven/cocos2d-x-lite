<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pay_sdk_tv_background"
    android:orientation="vertical">

    <ImageView
        android:layout_width="@dimen/fhd_1613"
        android:layout_height="@dimen/fhd_193"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/fhd_50"
        android:src="@drawable/pay_sdk_tv_payment_weixin" />

    <LinearLayout
        android:layout_width="@dimen/fhd_500"
        android:layout_height="@dimen/fhd_500"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/fhd_50"
        android:orientation="horizontal">

        <!--二维码相关布局-->

        <FrameLayout
            android:layout_width="@dimen/fhd_500"
            android:layout_height="@dimen/fhd_500">

            <ImageView
                android:id="@+id/qr_code"
                android:layout_width="@dimen/fhd_500"
                android:layout_height="@dimen/fhd_500"
                android:background="#ffffff" />

            <ProgressBar
                android:id="@+id/waitting"
                style="@android:style/Widget.ProgressBar.Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

        </FrameLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/fhd_50"
        android:text="支付"
        android:textSize="@dimen/fhd_40" />


</LinearLayout>