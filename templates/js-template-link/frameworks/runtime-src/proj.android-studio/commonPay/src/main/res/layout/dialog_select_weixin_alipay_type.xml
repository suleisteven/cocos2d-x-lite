            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/online_dialog_cancel_btn"
                android:layout_width="@dimen/fhd_450"
                android:layout_height="@dimen/fhd_580"
                android:background="@drawable/weixin_btn" />

            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
