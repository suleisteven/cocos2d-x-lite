                <!--android:text="微信扫码支付"-->
                <!--android:textColor="#ffffff"-->
                <!--android:textSize="16dp" />-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/fhd_100"
            android:layout_marginTop="@dimen/fhd_120"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/online_dialog_confirm_btn"
                android:layout_width="@dimen/fhd_450"
                android:layout_height="@dimen/fhd_580"
                android:background="@drawable/zhifubao_btn" />

            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
