<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/fhd_1140"
    android:layout_height="@dimen/fhd_760" >
    <RelativeLayout
        android:layout_width="@dimen/fhd_1140"
        android:layout_height="@dimen/fhd_1140"
        android:layout_centerInParent="true"
        android:background="@drawable/bg">
        <TextView
            android:id="@+id/online_dialog_title_view"
